@using EverythingSucks.ViewModels
@model CreateBrandViewModel

@{
    ViewData["Title"] = "Create Brand";
}

<h2>Create Brand</h2>

<form asp-controller="Brand" asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="Name">Brand name</label>
        <input asp-for="Name" id="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <div class="col-md-2">
            <button type="submit" id="submitBtn" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>