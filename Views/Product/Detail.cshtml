<script>
    function selectSize(sizeId) {
        $('input[name="sizeId"]').parent().removeClass('active');
        $('#size-' + sizeId).parent().addClass('active');
        $('#size-' + sizeId).prop('checked', true);
    }

    function selectColor(colorId) {
        $('input[name="colorId"]').parent().removeClass('active');
        $('#color-' + colorId).parent().addClass('active');
        $('#color-' + colorId).prop('checked', true);
    }

    $(document).ready(function () {
        $('input[name="colorOption"]').on('change', function () {
            var colorId = $(this).val();
            $('.tab-pane').removeClass('active');
            $('#tabs-' + colorId + '-primary').addClass('active');
            $('#tabs-' + colorId + '-additional').addClass('active');
        });

        $('.nav-link').on('click', function () {
            $('.nav-link').removeClass('active');
            $(this).addClass('active');
            var target = $(this).attr('href');
            $('.tab-pane').removeClass('active');
            $(target).addClass('active');
        });

        // Set first tab as active
        var firstColorId = '@firstColor?.ColorId';
        if (firstColorId) {
            $('#tabs-' + firstColorId + '-primary').addClass('active');
            $('#tabs-' + firstColorId + '-additional').addClass('active');
        }

        $('form').on('submit', function () {
            var selectedColorId = $('input[name="colorId"]:checked').val();
            var selectedSizeId = $('input[name="sizeId"]:checked').val();

            if (!selectedColorId || !selectedSizeId) {
                alert('Vui lòng chọn màu sắc và kích cỡ!');
                return false; // Prevent form submission if no selection
            }

            // Update route values with selected color and size
            var form = $(this);
            var actionUrl = form.attr('action');
            form.attr('action', actionUrl.replace('asp-route-colorId=', 'asp-route-colorId=' + selectedColorId)
                .replace('asp-route-sizeId=', 'asp-route-sizeId=' + selectedSizeId));
        });
    });
</script>