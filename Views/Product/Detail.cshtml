    var firstColor = Model.ProductColors.FirstOrDefault();
}

<!-- Shop Details Section Begin -->
<section class="shop-details">
    <div class="product__details__pic">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__details__breadcrumb">
                        <a href="./index.html">Trang chủ</a>
                        <a href="./shop.html">Cửa hàng</a>
                        <span>Chi tiết sản phẩm</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <ul class="nav nav-tabs" role="tablist">
                        @foreach (var color in Model.ProductColors)
                        {
                            var primaryImage = color.ProductImages.FirstOrDefault(img => img.IsPrimary);
                            var additionalImage = color.ProductImages.FirstOrDefault(img => !img.IsPrimary);

                            if (primaryImage != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(color == firstColor ? "active" : "")" data-toggle="tab" href="#tabs-@color.ColorId-primary" role="tab">
                                        <div class="product__thumb__pic set-bg" data-setbg="@primaryImage.ImageUrl">
                                        </div>
                                    </a>
                                </li>
                            }

                            if (additionalImage != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#tabs-@color.ColorId-additional" role="tab">
                                        <div class="product__thumb__pic set-bg" data-setbg="@additionalImage.ImageUrl">
                                        </div>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="col-lg-6 col-md-9">
                    <div class="tab-content">
                        @foreach (var color in Model.ProductColors)
                        {
                            var primaryImage = color.ProductImages.FirstOrDefault(img => img.IsPrimary);
                            var additionalImage = color.ProductImages.FirstOrDefault(img => !img.IsPrimary);

                            if (primaryImage != null)
                            {
                                <div class="tab-pane @(color == firstColor ? "active" : "")" id="tabs-@color.ColorId-primary" role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="@primaryImage.ImageUrl" alt="">
                                    </div>
                                </div>
                            }

                            if (additionalImage != null)
                            {
                                <div class="tab-pane" id="tabs-@color.ColorId-additional" role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="@additionalImage.ImageUrl" alt="">
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product__details__content">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <div class="product__details__text">
                        <h4>@Model.ProductName</h4>
                        <div class="rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <span> - 5 Reviews</span>
                        </div>
                        @* <h3>$270.00 <span>70.00</span></h3> *@
                        <h3>@Model.ProductPrice.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</h3>
                        @* <p>
                            Coat with quilted lining and an adjustable hood. Featuring long sleeves with adjustable
                            cuff tabs, adjustable asymmetric hem with elastic side tabs and a front zip fastening
                            with placket.
                        </p> *@
                        <p>@Model.ProductDescription</p>
                        <form asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductId" asp-route-colorId="" asp-route-sizeId="">
                            <div class="product__details__option">
                                <div class="product__details__option__size">
                                    <span>Size:</span>
                                    @foreach (var size in Model.Sizes)
                                    {
                                        <label for="@size.Id" onclick="selectSize('@size.Id')">
                                            @size.Name
                                            <input type="radio" id="size-@size.Id" name="sizeId" value="@size.Id" style="display:none;">
                                        </label>
                                    }
                                </div>
                                <div class="product__details__option__color">
                                    <span>Color:</span>
                                    @foreach (var color in Model.ProductColors)
                                    {
                                        <label for="@color.ColorId" style="background-color:@color.ColorCode;" onclick="selectColor('@color.ColorId')">
                                            <input type="radio" id="color-@color.ColorId" name="colorId" value="@color.ColorId" style="display:none;">
                                        </label>
                                    }
                                </div>
                            </div>
                            <div class="product__details__cart__option">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value="1" name="quantity">
                                    </div>
                                </div>
                                <button type="submit" class="primary-btn">Thêm vào giỏ hàng</button>
                            </div>
                            <div class="product__details__btns__option">
                                <a href="#"><i class="fa fa-heart"></i>Thêm vào yêu thích</a>
                                <a href="#"><i class="fa fa-exchange"></i> Add To Compare</a>
                            </div>
                        </form>
                        <div class="product__details__last__option">
                            <h5><span>Guaranteed Safe Checkout</span></h5>
                            <img src="img/shop-details/details-payment.png" alt="">
                            <ul>
                                <li><span>SKU:</span> 3812912</li>
                                <li><span>Categories:</span> Clothes</li>
                                <li><span>Tag:</span> Clothes, Skin, Body</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
