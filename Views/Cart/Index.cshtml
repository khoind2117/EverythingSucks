@model Cart

@{
    ViewData["Title"] = "Giỏ hàng";
    var cultureInfo = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}

<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Kích cỡ</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                var productPrice = item.ProductColor.Product.Price;
                                var quantity = item.Quantity;
                                var totalPrice = productPrice * quantity;
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="@item.ProductColor.ProductImages.FirstOrDefault()?.Url" style="width:90px; height:90px" alt="@item.ProductColor.Product.Name">
                                        </div>
                                        <div class="product__cart__item__text mr-3">
                                            <a asp-controller="Product" asp-action="Detail" asp-route-productId="@item.ProductColor.ProductId">
                                                <h6>@item.ProductColor.Product.Name</h6>
                                            </a>
                                            <h5>@productPrice.ToString("C0", cultureInfo)</h5>
                                        </div>
                                    </td>
                                    <td class="justify-content-center">
                                            @item.Size.Name
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input type="text" class="quantity-input" value="@quantity" min="1" data-product-id="@item.ProductColor.ProductId" data-color-id="@item.ProductColor.ColorId" readonly>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@totalPrice.ToString("C0", cultureInfo)</td>
                                    <td class="cart__close">
                                        <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@item.ProductColor.ProductId" asp-route-colorId="@item.ProductColor.ColorId">
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a asp-controller="Product" asp-action="Index">Tiếp tục mua sắm</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a href="#"><i class="fa fa-spinner"></i> Cập nhật giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="cart__discount">
                    <h6>Mã giảm giá</h6>
                    <form action="#">
                        <input type="text" placeholder="Mã coupon">
                        <button type="submit">Áp dụng</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Tổng giỏ hàng</h6>
                    <ul>
                        <li>Tổng cộng <span>@Model.CartItems.Sum(item => item.ProductColor.Product.Price * item.Quantity).ToString("C0", cultureInfo)</span></li>
                    </ul>
                    <a href="#" class="primary-btn">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const quantityInputs = document.querySelectorAll('.quantity-input');
        const updateButton = document.querySelector('.update__btn a');

        updateButton.addEventListener('click', function (event) {
            event.preventDefault();
            const cartItems = [];

            quantityInputs.forEach(input => {
                const productId = input.getAttribute('data-product-id');
                const colorId = input.getAttribute('data-color-id');
                const quantity = parseInt(input.value);

                cartItems.push({ productId, colorId, quantity });
            });

            fetch('@Url.Action("UpdateCart", "Cart")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(cartItems)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload(); // Tải lại trang để cập nhật giỏ hàng
                    } else {
                        alert('Có lỗi xảy ra khi cập nhật giỏ hàng.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi cập nhật giỏ hàng.');
                });
        });
    });
</script>